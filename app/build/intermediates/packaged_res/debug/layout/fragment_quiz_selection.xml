<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_subject"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_subject_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/android_basics" />

    <Button
        android:id="@+id/btn_subject_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/software_engineering" />

    <Button
        android:id="@+id/btn_subject_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ai" />

    <Button
        android:id="@+id/btn_subject_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/cloud_computing" />

    <Button
        android:id="@+id/btn_subject_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/networking" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_header"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
